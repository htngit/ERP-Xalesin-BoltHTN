{
  "name": "@xalesin/core",
  "version": "0.1.0",
  "description": "Core business logic and data models for Xalesin ERP",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@xalesin/config": "workspace:*",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "uuid": "^9.0.1",
    "decimal.js": "^10.4.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@xalesin/eslint-config": "workspace:*",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist"
  ]
}