{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@xalesin/core": ["./packages/core/src"],
      "@xalesin/core/*": ["./packages/core/src/*"],
      "@xalesin/ui": ["./packages/ui/src"],
      "@xalesin/ui/*": ["./packages/ui/src/*"],
      "@xalesin/config": ["./packages/config/src"],
      "@xalesin/config/*": ["./packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/native"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/config"
    },
    {
      "path": "./packages/eslint-config"
    }
  ]
}