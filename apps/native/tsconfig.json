{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@xalesin/core": ["../../packages/core/src"],
      "@xalesin/core/*": ["../../packages/core/src/*"],
      "@xalesin/ui": ["../../packages/ui/src"],
      "@xalesin/ui/*": ["../../packages/ui/src/*"],
      "@xalesin/config": ["../../packages/config/src"],
      "@xalesin/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/config"
    }
  ]
}